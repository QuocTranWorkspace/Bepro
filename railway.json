{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./mvnw clean package -DskipTests && find . -name '*.war' && echo 'Build complete'"
  },
  "deploy": {
    "startCommand": "find . -name '*.war' && java -jar $(find target -name '*.war' | head -1)",
    "healthcheckPath": "/healthCheck",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}